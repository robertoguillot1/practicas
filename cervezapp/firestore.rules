rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para usuarios - permitir lectura y escritura si est치 autenticado
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Reglas para productos - permitir lectura y escritura si est치 autenticado
    match /products/{productId} {
      allow read, write: if request.auth != null;
    }
    
    // Reglas para clientes - permitir lectura y escritura si est치 autenticado
    match /customers/{customerId} {
      allow read, write: if request.auth != null;
    }
    
    // Reglas para ventas - permitir lectura y escritura si est치 autenticado
    match /sales/{saleId} {
      allow read, write: if request.auth != null;
    }
  }
}
